    <DockPanel>
        <Grid ColumnDefinitions="*,*" DockPanel.Dock="Top" Margin="10">
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Image Source="/Assets/logo.png" Width="48" />
                <StackPanel Margin="10 0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="BlueLabel" FontWeight="Bold" FontSize="20" />
                        <TextBlock Name="VersionText" />
                    </StackPanel>
                    <StackPanel Spacing="5" Orientation="Horizontal">
                        <TextBlock Text="by" />
                        <Image Source="/Assets/haltroy.png" Width="18" />
                        <TextBlock Text="haltroy" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <ToggleButton Content="{x:Static lang:Lang.Start_About}" Name="ShowAbout" VerticalAlignment="Center" />
                <Button>
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{x:Static lang:Lang.Start_Theme}" />
                                <RadioButton Content="{x:Static lang:Lang.Start_ThemeSystemDefault}"
                                             Name="ThemeSystemDefault"
                                             IsCheckedChanged="ThemeSystemDefaultOnIsCheckedChanged" IsChecked="True" />
                                <RadioButton Content="{x:Static lang:Lang.Start_LightTheme}" Name="ThemeLight"
                                             IsCheckedChanged="ThemeLightOnIsCheckedChanged" />
                                <RadioButton Content="{x:Static lang:Lang.Start_DarkTheme}" Name="ThemeDark"
                                             IsCheckedChanged="ThemeDarkOnIsCheckedChanged" />
                                <ToggleSwitch Name="UseBlur" OnContent="{x:Static lang:Lang.Start_UseBlur}"
                                              OffContent="{CompiledBinding $self.OnContent}"
                                              IsCheckedChanged="UseBlurOnIsCheckedChanged" IsChecked="True" />
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Lang.AccentColor}" />
                                    <ColorPicker Name="AccentColor" ColorChanged="AccentColor_OnColorChanged" />
                                    <Button Click="ResetAccentColor">
                                        <PathIcon Data="{StaticResource arrow_sync_circle_regular}" />
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                    <PathIcon Data="{StaticResource color_regular}" />
                </Button>
            </StackPanel>
        </Grid>
        <Separator DockPanel.Dock="Top" />
        <Panel>
            <views:AboutScreen Name="AboutMenu" IsVisible="{CompiledBinding #ShowAbout.IsChecked}" />
            <Carousel Name="ContentCarousel" IsVisible="{CompiledBinding !#ShowAbout.IsChecked}">
                <Carousel.PageTransition>
                    <CompositePageTransition>
                        <PageSlide Duration="0:00:00.250" Orientation="Horizontal" />
                    </CompositePageTransition>
                </Carousel.PageTransition>
                <views:StartPage Main="{CompiledBinding $parent[UserControl]}" />
            </Carousel>
        </Panel>
    </DockPanel>
</UserControl>