    <DockPanel Margin="10">
        <TextBlock Margin="0 5" DockPanel.Dock="Top" Text="{x:Static lang:Lang.Start_Desc}"
                   TextWrapping="WrapWithOverflow" />
        <Grid ColumnDefinitions="*,5,*">
            <StackPanel Spacing="5" Grid.Column="0">
                <PathIcon Data="{StaticResource history_regular}" IsVisible="False" IsEnabled="False"
                          Foreground="{DynamicResource SystemAccentColor}"
                          Name="HistoryItem" />
                <TextBlock Text="{x:Static lang:Lang.Start_LastOpenedProjects}" HorizontalAlignment="Center" />
                <Separator />
                <ScrollViewer>
                    <StackPanel Orientation="Vertical" Spacing="5" Name="LastOpened" />
                </ScrollViewer>
                <TextBlock Text="{x:Static lang:Lang.Start_NoLastOpened}" HorizontalAlignment="Center"
                           IsVisible="{CompiledBinding !#LastOpened.Children.Count}"
                           Foreground="{DynamicResource TextControlForegroundDisabled}" />

                <Button Content="{x:Static lang:Lang.Start_ClearLastOpened}" HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        IsVisible="{CompiledBinding !!#LastOpened.Children.Count}" Click="ClearLastOpened" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Spacing="5" Grid.Column="2">
                <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Click="NewProject">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <PathIcon Foreground="{DynamicResource SystemAccentColor}"
                                  Data="{StaticResource add_square_regular}" />
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{x:Static lang:Lang.Start_NewProject}" FontSize="17.5"
                                       FontWeight="SemiBold" />
                            <Separator />
                            <TextBlock Text="{x:Static lang:Lang.Start_NewProjectDesc}" />
                        </StackPanel>
                    </StackPanel>
                </Button>
                <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Click="ImportProject">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <PathIcon Foreground="{DynamicResource SystemAccentColor}"
                                  Data="{StaticResource arrow_import_regular}" />
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{x:Static lang:Lang.Start_ImportProject}" FontSize="17.5"
                                       FontWeight="SemiBold" />
                            <Separator />
                            <TextBlock Text="{x:Static lang:Lang.Start_ImportProjectDesc}" />
                        </StackPanel>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>